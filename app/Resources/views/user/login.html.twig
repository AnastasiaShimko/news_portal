{% extends 'base.html.twig' %}

{% block title %}{{ 'authorisation' | trans }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/base.css') }}" />
{% endblock %}
{% block body %}
    <div>
        <h1>{{ 'authorisation' | trans }}</h1>
        <form action="{{ path('login') }}" method="post">
            <div>
                <label for="username">{{ 'email' | trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div>
                <label for="password">{{ 'password' | trans }}</label>
                <input type="password" id="password" name="_password" />
            </div>
            {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <br>
            <button type="submit">{{ 'login' | trans }}</button>
            <br>
            <p>{{ 'registration_question' | trans }}</p>
            <a href="/register">{{ 'to_registration' | trans }}...</a><br>
            <p>{{ 'forgot_password_question' | trans }}</p>
            <a href="/password_change">{{ 'send_new_password' | trans }}...</a>
        </form>
    </div>
{% endblock %}
