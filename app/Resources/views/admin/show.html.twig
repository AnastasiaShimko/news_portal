{% extends 'main/main.html.twig' %}
{% block additionalcss %}
    <link rel="stylesheet" href="{{ asset('css/userstable.css') }}" />
{% endblock %}

{% block content %}
        <div class="content" id="articles">
            <h3>Users</h3>
            <div class="table">
            {{ form_start(form) }}
                    {% for user in users %}
                    <table>
                            <tr>
                                <td>User ID</td>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <td>User email</td>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <td>User role</td>
                                <td> {{ form_row(form.roles[user.id]) }}</td>
                            </tr>
                            <tr>
                                <td>Notification</td>
                                <td>{{ user.notification }}</td>
                            </tr>
                            <td style="border: none;"></td>
                    </table>
                    {% endfor %}
            <button type="submit">Change</button>
            {{ form_end(form) }}
            </div>
        </div>
{% endblock %}